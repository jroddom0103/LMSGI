{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nombre": {
      "type": "string",
      "minLength": 0
    },
    "edad": {
      "type": "integer",
      "minimum": 0
    },
    "hobbies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "correo": {
      "type": "string",
      "format": "email"
    },
    "sexo": {
      "type": "string",
      "enum": ["H", "M"]
    }
  },
  "required": ["nombre", "edad", "hobbies", "correo", "sexo"]
}

